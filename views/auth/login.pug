extends auth-layout.pug

include ../utils.pug

block content
  +validationErrorSummary(errors)
  form(action='/users/login' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Username', 'username', username)
    +field('Password', 'password', null, 'password')
    div(class='form-buttons')
      button(class="form-submit theme" type='submit') Login
      a(class="form-submit theme cancel" href='/') Cancel
  div
    p(class="redirect"): a(href='/users/register') Don't have an account?